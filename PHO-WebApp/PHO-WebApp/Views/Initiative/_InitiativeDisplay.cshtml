@model PHO_WebApp.Models.Initiative
@*@{
    ViewBag.Title = "_InitiativeDisplay";
    Layout = "~/Views/Shared/_Layout.cshtml";
}*@

@*<h2>_InitiativeDisplay</h2>*@

	<div class="col-md-6" style="float:left">
		<h3>Search</h3>
	</div>

<table width="100%" class="InitiativeRecord">
	<thead style="border-top: 1px solid #808080">
		<tr><th colspan="6"> </th></tr>
		<tr><th colspan="6"> </th></tr>
		<tr><th colspan="6"> </th></tr>
	</thead>
	<tr>&nbsp;</tr>
	<tr>&nbsp;</tr>
	<tr>
		<td valign="top" style="font-weight:bold; width:120px; max-width:120px;">Initiative Name:</td>
		<td valign="top" style="width:300px; max-width:300px;">@Html.DisplayFor(model => model.Name)</td>
		<td valign="top" style="font-weight:bold; width:100px; max-width:100px;">ABBR: </td>
		<td valign="top" style="width:300px; max-width:300px;">@Html.DisplayFor(model => model.ShortName)</td>
		<td valign="top" style="font-weight:bold; width:100px; max-width:100px;">Updated On:</td>
		<td valign="top" style="width:120px; max-width:120px;">@Html.DisplayFor(model => model.ModifiedDate)</td>
	</tr>
	<tr>
		<td valign="top" style="font-weight:bold; width:120px; max-width:120px;">Initiative Description:</td>
		<td valign="top" colspan="3">@Html.DisplayFor(model => model.Description)</td>
		<td valign="top" style="font-weight:bold; width:100px; max-width:100px;">Owner:</td>
		<td valign="top" style="width:300px; max-width:300px;">@Html.DisplayFor(model => model.Owner)</td>
	</tr>
	<tr>
		<td valign="top" style="font-weight:bold; width:120px; max-width:120px;">Phase/Status:</td>
		<td valign="top">@Html.DisplayFor(model => model.StatusDesc)</td>
		<td valign="top" style="font-weight:bold; width:120px; max-width:120px;">Document Management</td>
		<td valign="top" colspan="2"><a href="@Url.Content("~/noteikumi.pdf")"><img src="~/Images/pdf_icon.png" height="20" width="20" /></a></td>
		
	</tr>
	<tr>&nbsp;</tr>
</table>