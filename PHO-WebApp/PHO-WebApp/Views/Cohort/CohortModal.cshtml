@model PHO_WebApp.Models.Cohort
@Styles.Render("~/Content/css")
@Scripts.Render("~/bundles/modernizr")
<script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js"></script>
<script type="text/javascript" src="http://ajax.cdnjs.com/ajax/libs/json2/20110223/json2.js"></script>
@Scripts.Render("~/bundles/bootstrap")
@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/jqueryval")
<div style="position:relative">
    @using (Html.BeginForm("Save", "Cohort", FormMethod.Post))
    {
        <table class="contentRow" style="width:750px; border-spacing:10px;">
            <tr>
                @*Hidden fields*@
                <td colspan="4">
                    @Html.HiddenFor(m => Model.id)
                    @Html.ValidationSummary(true)
                    @Html.AntiForgeryToken()
                </td>
            </tr>
            <tr >
                <td>Name: </td>
                <td>@Html.EditorFor(m => Model.Name)  @Html.ValidationMessageFor(Model => Model.Name, null, new { @class = "validationText" })</td>
                <td>Owner: </td>
                <td>@Html.EditorFor(m => Model.Owner)  @Html.ValidationMessageFor(Model => Model.Owner, null, new { @class = "validationText" })</td>
            </tr>
            <tr >
                <td>Abbr Name: </td>
                <td>@Html.EditorFor(m => Model.ShortName)  @Html.ValidationMessageFor(Model => Model.ShortName, null, new { @class = "validationText" })</td>
                <td>Status: </td>
                <td>
                    @Html.DropDownListFor(
                    x => x.Status,
                    new SelectList(Model.AllStatuses, "Id", "Name"),
                    "-- Select Status --",
                    new
                    {
                    id = "StatusDropdownList"
                    }
                    )

                    @Html.ValidationMessageFor(Model => Model.Status, null, new { @class = "validationText" })
                </td>
            </tr>
            <tr >
                <td>Description: </td>
                <td colspan="3">
                    @Html.TextAreaFor(m => Model.Description, new { @style = "resize:none; overflow-y:scroll;", maxlength = "500", @rows = "5", @cols = "67" })
                    @Html.ValidationMessageFor(Model => Model.Description, null, new { @class = "validationText" })
                </td>
            </tr>
            <tr >
                <td>Details: </td>
                <td colspan="3">
                    @Html.TextAreaFor(m => Model.Details, new { @style = "resize:none; overflow-y:scroll;", maxlength = "8000", @rows = "10", @cols = "67" })
                    @Html.ValidationMessageFor(Model => Model.Details, null, new { @class = "validationText" })
                </td>
            </tr>
            <tr >
                <td>Calculations: </td>
                <td colspan="3">
                    @Html.TextAreaFor(m => Model.Calculations, new { @style = "resize:none; overflow-y:scroll;", maxlength = "500", @rows = "2", @cols = "67" })
                    @Html.ValidationMessageFor(Model => Model.Calculations, null, new { @class = "validationText" })
                </td>
            </tr>
            <tr >
                <td>Limitations: </td>
                <td colspan="3">
                    @Html.TextAreaFor(m => Model.Limitations, new { @style = "resize:none; overflow-y:scroll;", maxlength = "500", @rows = "2", @cols = "67" })
                    @Html.ValidationMessageFor(Model => Model.Limitations, null, new { @class = "validationText" })
                </td>
            </tr>
            <tr >
                <td>Exceptions: </td>
                <td colspan="3">
                    @Html.TextAreaFor(m => Model.Exceptions, new { @style = "resize:none; overflow-y:scroll;", maxlength = "500", @rows = "2", @cols = "67" })
                    @Html.ValidationMessageFor(Model => Model.Exceptions, null, new { @class = "validationText" })
                </td>
            </tr>
            <tr >
                <td>Datasources: </td>
                <td colspan="3">
                    @Html.TextAreaFor(m => Model.DataSources, new { @style = "resize:none; overflow-y:scroll;", maxlength = "300", @rows = "2", @cols = "67" })
                    @Html.ValidationMessageFor(Model => Model.DataSources, null, new { @class = "validationText" })
                </td>
            </tr>
            <tr >
                <td>Lookback: </td>
                <td colspan="3">
                    @Html.TextAreaFor(m => Model.Lookback, new { @style = "resize:none; overflow-y:scroll;", maxlength = "500", @rows = "2", @cols = "67" })
                    @Html.ValidationMessageFor(Model => Model.Lookback, null, new { @class = "validationText" })
                </td>
            </tr>
            <tr>
                <td>SQL: </td>
                <td colspan="3">
                    @Html.TextAreaFor(m => Model.SQL, new { @style = "resize:none; overflow-y:scroll;", maxlength = "8000", @rows = "10", @cols = "67", @readonly = true })
                </td>
            </tr>
        </table>
        <div style="position:absolute; bottom:3px; right:3px;">
            <input type="submit" name="Login" value="Submit" class="btn btn-primary" />
        </div>

    }
</div>




