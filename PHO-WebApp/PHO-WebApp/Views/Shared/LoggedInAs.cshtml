@model PHO_WebApp.Models.UserDetails
    @{
        if (Model != null && Model.UserName != null)
        {
            string loginText = "Welcome " + Model.UserName + "! - Logout";
            @Html.ActionLink(loginText, "Logout", "Login", new { @class = "Header-nav-item" })
        }
        else
        {
            @Html.ActionLink("Login", "Index", "Home", new { @class = "Header-nav-item" })
        }
    }

